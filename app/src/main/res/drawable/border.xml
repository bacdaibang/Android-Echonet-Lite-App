<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/border_text" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:bottomLeftRadius="@dimen/border_radius"
        android:topLeftRadius="@dimen/border_radius"
        android:bottomRightRadius="@dimen/border_radius"
        android:topRightRadius="@dimen/border_radius"

        android:radius="1dp"   >
    </corners>
</shape>